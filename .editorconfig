root = true

[*]
charset = utf-8
tab_width = 2                     # configures Prettier's tabWidth
indent_size = 2                   # configures Prettier's tabWidth and tabs
indent_style = space
insert_final_newline = true
max_line_length = 120             # configures Prettier's printWidth
end_of_line = lf                  # configures Prettier's endOfLine
trim_trailing_whitespace = true

[*.html]
max_line_length = 160             # also change in .vscode/settings.json

[*.ts]
quote_type = single

[*.md]
indent_style = space
max_line_length = off
trim_trailing_whitespace = false
